template(name="carouselForGoods")
  .row
    .box(style="min-height: 400px")
      .col-lg-12
        .carousel.slide#carousel-example-generic
          ol.carousel-indicators.hidden-xs
            li.active(data-target="#carousel-example-generic" data-slide-to="0")
            each images
              li(data-target="#carousel-example-generic" data-slide-to="1")
          
          .carousel-inner
            .item.active
              img.img-responsive.img-full(src="img/#{firstImage}")
            each images
              .item
                img.img-responsive.img-full(src="img/#{this}")